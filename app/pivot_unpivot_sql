-- esse script Ã© um exemplo de como usar o PIVOT e UNPIVOT no SQL Server
SELECT *
FROM (
    SELECT 
        FORMAT(ModifiedDate, 'dd/MM/yyyy') AS OrderDate,
        Name,
        ListPrice
    FROM Production.Product
) AS SourceTable
PIVOT (
    SUM(ListPrice) FOR Name IN ([Mountain-200 Black, 42], [Mountain-200 Black, 38], [Mountain-200 Red, 38])
) AS PivotTable;
